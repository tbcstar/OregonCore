###############################################
# Oregon Core World Server configuration file #
###############################################

[worldserver]
ConfVersion=2015071262

# Note to devs, line breaks should be at column 80
###############################################################################
# CONNECTIONS AND DIRECTORIES
#
#    RealmID
#        RealmID必须匹配realmd数据库中的realmlist
#
#    DataDir
#        数据目录设置。
#        Important: DataDir needs to be quoted, as it is a string which may
#         contain space characters.
#        Example: "@prefix@/share/oregoncore"
#
#    LogsDir
#        日志目录设置。
#        Important: Logs dir must exists, or all logs need to be disabled
#        Default: "" - no log directory prefix, if used log names isn't
#         absolute path then logs will be stored in current directory.
#
#    LoginDatabaseInfo
#    WorldDatabaseInfo
#    CharacterDatabaseInfo
#       world服务器的数据库连接设置。
#        Default:
#                    hostname;port;username;password;database
#                    .;somenumber;username;password;database
#                     - use named pipes in Windows
#                    Named pipes: mySQL required adding
#                        "enable-named-pipe" to [mysqld] section my.ini
#                    .;/path/to/unix_socket;username;password;database
#                     - use Unix sockets in Unix/Linux
#	LoginDatabase.Connections
#	WorldDatabase.Connections
#	CharacterDatabase.Connections
#		 用几个线程处理Mysql数据异步(即延迟)。每个数据库最多16个连接.
#		 请注意，为了数据一致性，每个数据库只有一个连接用于事务和异步选择.
#		 因此，计算将建立多少连接的公式是: X = #_connections + 1
#		 Default: 1 connection for SELECT statements
#
#    MaxPingTime
#        最大数据库ping间隔(ping之间的分钟)的设置
#
#    WorldServerPort
#        Default WorldServerPort
#
#    BindIP
#        Bind World Server to IP/hostname
#
###############################################################################

RealmID = 1
DataDir = "/data/server/data"
LogsDir = "/data/server/log"
LoginDatabase.Info              = "127.0.0.1;3310;root;A111111a;realmd"
LoginDatabase.Connections       = 1
LoginDatabase.WorkerThreads     = 1
WorldDatabase.Info              = "127.0.0.1;3310;root;A111111a;world"
WorldDatabase.Connections       = 1
WorldDatabase.WorkerThreads     = 1
CharacterDatabase.Info          = "127.0.0.1;3310;root;A111111a;characters"
CharacterDatabase.Connections   = 1
CharacterDatabase.WorkerThreads = 1
MaxPingTime = 30
WorldServerPort = 8085
BindIP = "0.0.0.0"

###############################################################################
# SCRIPTING SETTINGS-脚本设置
#
#    Locale
#        设置要使用的当前(DBC)区域设置
#
#    EventAI Error reporting-EventAI错误报告
#        Default: 0 - Only startup
#                 1 - 启动错误和运行时事件错误
#                 2 - 启动错误、运行时事件错误和创建错误
#
###############################################################################

Locale = 255
EAIErrorLevel = 2

###############################################################################
# PERFORMANCE SETINGS-性能设置
#
#    UseProcessors
#        多处理器系统的处理器掩码(仅用于Windows)
#        Default: 0 (selected by OS)
#                 number (bitmask value of selected processors)
#
#    ProcessPriority
#       进程优先级设置(仅用于Windows)
#        Default: 1 (HIGH)
#                 0 (Normal)
#
#    Compression
#       发送到客户机的更新包的压缩级别(1..9)
#        Default: 1 (速度)
#                 9 (最佳压缩)
#
#    PlayerLimit
#        玩家数量限制。不包括Mods、GMs和管理员
#        Default: 100
#                 0 (不限制)
#                -1 (只适用于Mods, GM和管理员)
#                -2 (只适用于GM和管理员)
#                -3 (仅供管理员)
#
#    SaveRespawnTimeImmediately
#       为死亡时的生物和使用/打开时的游戏对象节省重生时间
#        Default: 1 (立即保存生物/游戏物体重生时间)
#                 0 (在网格卸载时保存生物/游戏物体重生时间)
#
#    MaxOverspeedPings-最大超时次数
#        超过限制次数后将踢掉玩家
#         (用于禁止检查的最小值是2.0)
#        Default: 2
#
#    GridUnload
#        网格卸载
#         (如果你有很多内存，你可以禁用它
#         来加快玩家移动到新的网格第二次)
#        Default: 1 (卸载网格)
#                 0 (不要卸载网格)
#
#    SocketSelectTime
#        Socket 选择时间 (毫秒)
#        Default: 10000 (10 secs)
#
#    SocketTimeOutTime
#        在角色选择界面停留的时间
#        超时后断开连接(以毫秒为单位).
#        Default: 900000 (15 分钟)
#
#    SessionAddDelay
#        在身份验证协议和向world建立连接
#        网络线程休眠的时间(以微秒为单位).
#        Default: 10000 (10毫秒, 0,01 second)
#
#    GridCleanUpDelay
#        网格清理延迟(毫秒)
#        Default: 300000 (5 分钟)
#
#    MapUpdateInterval
#        地图更新间隔(毫秒)
#        Default: 100
#
#    ChangeWeatherInterval
#        天气更新间隔(毫秒)
#        Default: 600000 (10 分钟)
#
#    PlayerSaveInterval
#        玩家保存间隔(毫秒)
#        Default: 900000 (15 分钟)
#
#    DisconnectToleranceInterval
#        在短时间内保留队伍中的离线玩家.
#         (在短时间内)
#        Default: 0 (禁用)
#				  1 (启用)
#
#    vmap.enableLOS
#    vmap.enableHeight
#        启用/禁用VMmap对视线和高度计算的支持
#                 0 (禁用)
#        Default: 1 (启用)
#
#    vmap.ignoreSpellIds
#        这些法术在计算LoS时被忽略
#         带分隔符的id列表 ','
#
#    vmap.petLOS
#        检查视线中的宠物，.避免它们穿墙
#                 0 (禁用，减少CPU使用)
#        Default: 1 (启用，每个宠物攻击命令将检查是否丢失)
#
#    vmap.totem
#        使用VMAP计算图腾召唤位置
#        Default: 0 (禁用，减少CPU使用)
#                 1 (启用，每个图腾创建检查丢失)
#
#    DetectPosCollision
#       检查最终移动位置、召唤位置等是否有明显碰撞
#         使用其他对象或wall(只有在启用vmap时才使用wall)
#        Default: 1 (启用，需要更多的CPU使用)
#                 0 (disable, less position precision but will use less CPU)
#
#    TargetPosRecalculateRange
#       与移动目标点的最大距离(移动单元大小)
#        新目标移动点之后的目标对象(大小)
#         计算。最大:近战攻击范围(5)，最小:接触范围(0.5)
#         More distance let have better performence, less distance let have
#         more sensitive reaction at target move.
#        Default: 1.5
#
#    mmap.enabled
#        使用mmap启用/禁用寻路
#        Default: 1 (enable)
#                 0 (disable)
#
#    mmap.ignoreMapIds
#        在列出的地图上禁用mmap寻路。
#        List of map ids with delimiter ','
#
#    UpdateUptimeInterval
#        以分钟为单位更新realm正常运行时间.必须是> 0
#        Default: 10 (minutes)
#
#    LogDB.Opt.ClearInterval
#        清除' logs '表的WUPDATE_CLEANDB计时器的时间
#         旧的条目. 必须 > 0.
#        Default: 10 (minutes)
#
#    LogDB.Opt.ClearTime
#       要保存的旧“日志”表条目的最大时间(以秒为单位).
#        Default: 1209600 (14 days)
#                 0 - 不清除
#
#    MaxCoreStuckTime
#        定期检查进程是否被冻结，
#        如果是这种情况，强制崩溃后指定的秒数必须是> 0。
#        推荐> 10秒，如果你使用这个。
#        Default: 0 (Disabled)
#
#    AddonChannel
#        允许/禁止通过服务器使用附加通道
#         (some client side addons will not work correctly with disabled
#         addon channel)
#        Default: 1 (允许插件通道)
#                 0 (不允许添加通道)
#
#    MapUpdate.Threads
#    更新maps的线程数
#    Default: 1
#
###############################################################################

UseProcessors = 0
ProcessPriority = 1
Compression = 1
PlayerLimit = 0
SaveRespawnTimeImmediately = 1
MaxOverspeedPings = 2
GridUnload = 0
SocketSelectTime = 10000
SocketTimeOutTime = 900000
SessionAddDelay = 10000
GridCleanUpDelay = 300000
MapUpdateInterval = 100
ChangeWeatherInterval = 600000
PlayerSaveInterval = 60000
DisconnectToleranceInterval = 1
vmap.enableLOS = 1
vmap.enableHeight = 1
vmap.ignoreSpellIds = ""
vmap.petLOS = 1
vmap.totem = 1
DetectPosCollision = 1
TargetPosRecalculateRange = 2
mmap.enabled = 1
mmap.ignoreMapIds = ""
UpdateUptimeInterval = 10
LogDB.Opt.ClearInterval = 10
LogDB.Opt.ClearTime = 1209600
MaxCoreStuckTime = 15
AddonChannel = 1
MapUpdate.Threads = 2

###############################################################################
# SERVER LOGGING-服务器日志
#
#    PidFile
#        World-守护进程PID文件
#        Default: ""             - 不创建PID文件
#                 "./worldd.pid" - 创建PID文件(推荐名称)
#
#    LogMask
#        服务器控制台/文件级别的日志记录
#        这是位掩码. 可能的值:
#        STRING = 1, BASIC = 2, DETAIL = 4, DEBUG = 8,
#        ERROR = 16, ERROR_DB = 32, SQL = 64, ARENA = 128,
#        WARDEN = 256, CHAT = 512, COMMAND = 1024,
#        CHAR = 2048, REMOTE = 4096, MAP = 8192, VMAP = 16384
#        MMAP = 32768, NETWORK = 65536
#        Example: 我想看看基本的输出和错误:
#                 STRING + BASIC + ERROR + ERROR_DB + SQL =
#                 1      + 2     + 16    + 32       + 64  = 115 
#        Default: 51
#
#    WorldLogFile
#       网络数据包应该使用的日志的名称。
#       Example: "Network.log"
#       Default: "" - disabled 
#
#    LogFile
#       日志文件名，这里将删除所有没有特定日志的消息。
#        Default: "Server.log"
#                 "" - 空名称禁用创建日志文件
#
#    ChatLogFile
#        聊天日志的日志文件
#        Default: "chat.log"
#                 "" - 空名称为禁用
#
#    LogTimestamp
#        名称中带有服务器启动时间戳的日志文件
#         在表单logname_yyy - m - dd中，用于Logname.Ext
#        Default: 0 - 名称中没有时间戳
#                 1 - 在名称中添加时间戳
#
#    NetworkLogFile
#        用于worldserver的包日志文件
#        Default: "network.log"
#
#    DBErrorLogFile
#        服务器运行时检测到的DB错误的日志文件
#        Default: "DBErrors.log"
#
#    CharLogFile
#        角色操作日志文件的名字
#        Default: "Char.log"
#                 "" - 空名称禁用创建日志文件
#
#    CharLogTimestamp
#        名称中带有服务器启动时间戳的日志文件
#         in form Logname_YYYY-MM-DD.Ext for Logname.Ext
#        Default: 0 - 名称中没有时间戳
#                 1 - 在名称中添加时间戳
#
#    GmLogFile
#       GM命令的日志文件
#        Default: "gm_commands.log"
#                 "" - Empty name for disable
#
#    GmLogTimestamp
#        带有服务器启动时间戳的GM日志文件
#         in form Logname_YYYY-MM-DD.Ext for Logname.Ext
#        Default: 0 - 名称中没有时间戳
#                 1 - 在名称中添加时间戳
#
#    GmLogPerAccount
#        GM Logfiles with GM account id
#         (注意:如果没有设置Gm Log File，则没有创建日志)
#        Default: 0 - 将gm日志数据添加到单个日志文件中
#                 1 - 将gm日志数据添加到具有名称的帐户特定日志文件中
#                     in form Logname_#ID_YYYY-MM-DD.Ext
#                     or form Logname_#ID.Ext
#
#    RaLogFile
#       RA命令的日志文件
#        Default: "Ra.log"
#                 "" - Empty name for disable
#
#    ArenaLogFile
#        竞技场战斗和竞技场团队创建的日志文件
#        Default: "" - 不创建竞技场日志文件
#
#   ArenaLogExtendedInfo
#        竞技场战斗和竞技场团队创建的扩展信息日志文件
#        Default: 0 - 扩展竞技场注销
#                 1 - 扩展竞技场登录
#
#    LogColors
#        颜色信息。有关条目，请参见LogMask.
#        Default: "0 6 4 3 1 1 2 7 5 0 4 0 1 3 2 4 0" - 默认颜色方案
#        Colors: 0  - BLACK (没有颜色,跳过)
#                1  - RED
#                2  - GREEN
#                3  - BROWN
#                4  - BLUE
#                5  - MAGENTA
#                6  - CYAN
#                7  - LGREY
#                8  - GREY
#                9  - LRED
#                10 - LGREEN
#                11 - YELLOW
#                12 - LBLUE
#                13 - LMAGENTA
#                14 - LCYAN
#                15 - WHITE
#        Example: "0 6 4 3 1 1 2 7 5 0 4 0 1 3 2 4 0"
#
#    DBLogMask
#       DB日志记录的日志级别。
#        这是位掩码。有关详细信息，请参阅上面的LogMask。
#        Default: 0 - disabled
#
#    LogSQLFilename
#        用于记录更改world数据库查询的文件.
#        注意-你需要有正确的日志掩码顺序
#        此选项才会生效!
#        Default: "logSQL.sql"
#
#    LogSQLTimestamp
#        是否将日期添加到日志文件的名称中
#        Logname.log becomes Logname_YYYY-MM-DD.log
#        Default: 1 - on
#                 0 - off
#
#    ChatLogs.Channel
#        启用自定义频道中的日志聊天功能.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.Whisper
#        启用玩家之间的私语日志.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.Party
#        启用日志参与方消息.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.Raid
#        启用日志raid消息.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.Guild
#        启用日志公会消息.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.Public
#        启用记录公共聊天事件(say/yell/emote).
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.Addon
#        启用日志附加消息.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogs.BattleGround
#        启用日志战场聊天.
#        Default: 0 - off
#                 1 - on
#
#    ChatLogTimestamp
#        聊天日志文件的名称与服务器启动的时间戳
#        in form Logname_YYYY-MM-DD.Ext for Logname.Ext
#        Default: 0 - 名称中没有时间戳
#                 1 - 在名称中添加时间戳
#
###############################################################################

LogSQL = 1
PidFile = "./worldd.pid"
LogLevel = 1
LogTime = 1
LogFile = "Server.log"
LogTimestamp = 1
