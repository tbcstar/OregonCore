#
#    DatabaseUpdater.PathToUpdates-数据库更新程序更新路径
#        到src/updates/world的路径，如果不设置updater将无法工作.
#        路径可以是绝对路径，也可以是相对于运行的目录核心路径.
#        Default: ""
#        Example: (unix) "/home/oregon/oregoncore/sql/updates"
#                 (win)  "C:\oregoncore\sql\updates"
#
#    DatabaseUpdater.ModPathToUpdates
#        The path to modules, if not set modules sql updater won't work.
#        The path may be absolute, or relative to directory core runs in.
#        Directory must be like modules/mod_xxx/sql/reamld or characters or world
#        Default: ""
#        Example: (unix) "/home/oregon/oregoncore/modules"
#                 (win)  "C:\oregoncore\modules"
#
###############################################################################

DatabaseUpdater.Enabled = 1
DatabaseUpdater.PathToUpdates = "/data/OregonCore/sql/updates"
DatabaseUpdater.ModPathToUpdates = "/data/OregonCore/modules/"

###################################################################################################################
#  ELUNA SETTINGS
#
#    Eluna.Enabled
#        Enable Eluna LuaEngine-启动Eluna Lua引擎
#        Default: 1 (Enabled)
#                 0 (Disabled)
#
#   Eluna.TraceBack
#       Description: Sets whether to use debug.traceback function on a lua error or not.
#                    Notice that you can redefine the function.
#       Default:    false - (使用默认错误输出)
#                   true  - (使用调试.回溯功能)
#
#   Eluna.ScriptPath
#       Description: Sets the location of the script folder to load scripts from
#                    路径可以是相对的，也可以是绝对的。
#       Default:    "lua_scripts"
#
###################################################################################################################

Eluna.Enabled = 1
Eluna.TraceBack = false
Eluna.ScriptPath = "/data/server/bin/lua_scripts"

###############################################################################
#
#    WarsongTimer.Enabled
#        启用或禁用warsoong gultch计时器.
#        Warsong gultch timer wasnt added till 3.2.0
#		 Default = 1
#		 Values 1 - on, 0- off
#	CreateUpdateFile.Enabled
#   	 当将该生物从游戏中添加到数据库时
#		 它将在主目录中创建一个.sql文件
#        这是一个很好的发展选择
#		 Default = 0
#        Values 1 - on, 0 - off
#
#	Console.RestartTimer
#		在控制台选择重启的时间(以秒为单位)
#		window the server will restart
#		Default = 10
#
###############################################################################

WarsongTimer.Enabled = 1
CreateUpdateFile.Enabled = 1
Console.RestartTimer = 10
